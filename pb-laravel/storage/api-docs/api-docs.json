                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Application created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "data": {
                                            "properties": {
                                                "id": {
                                                    "type": "integer",
                                                    "example": 10
                                                },
                                                "candidate_id": {
                                                    "type": "integer",
                                                    "example": 1
                                                },
                                                "job_posting_id": {
                                                    "type": "integer",
                                                    "example": 5
                                                },
                                                "applied_at": {
                                                    "type": "string",
                                                    "format": "date-time",
                                                    "example": "2025-08-06T14:30:00Z"
                                                },
                                                "status": {
                                                    "type": "string",
                                                    "example": "applied"
                                                },
                                                "created_at": {
                                                    "type": "string",
                                                    "format": "date-time",
                                                    "example": "2025-08-06T14:31:00Z"
                                                },
                                                "updated_at": {
                                                    "type": "string",
                                                    "format": "date-time",
                                                    "example": "2025-08-06T14:31:00Z"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad request"
                    }
                }
            }
        },
